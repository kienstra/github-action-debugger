{
	"name": "github-action-debugger",
	"displayName": "GitHub Action Debugger",
	"description": "Run and debug GitHub actions locally",
	"version": "0.0.1",
	"repository": "https://github.com/kienstra/github-action-debugger",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Debuggers",
		"Testing"
	],
	"activationEvents": [
		"onCommand:github-action-debugger.welcome"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "github-action-debugger.welcome",
				"title": "Welcome"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "ghActionsDebugger",
					"title": "GitHub Action Debugger",
					"icon": "resources/folder.svg"
				}
			]
		},
		"views": {
			"ghActionsDebugger": [
				{
					"id": "ghActions",
					"name": "GitHub Actions"
				},
				{
					"id": "results",
					"name": "Action Results"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.54.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"standard": "^16.0.3",
		"ts-loader": "^8.0.14",
		"typescript": "^4.1.3",
		"vscode": "^1.1.37",
		"vscode-test": "^1.5.0",
		"webpack": "^5.19.0",
		"webpack-cli": "^4.4.0"
	}
}
